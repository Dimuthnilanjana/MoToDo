<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:ignore="ExtraText"
    >

    <EditText
        android:id="@+id/editTextconfirmpass"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:background="@drawable/line_txt"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="User Name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="378dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:background="@drawable/action_button"
        android:text="Register"
        android:textSize="16dp"
        tools:ignore="MissingConstraints,VisualLintButtonSize"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="493dp" />

    <Button
        android:id="@+id/google_button"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:background="@drawable/stroke_button"
        android:text="Register With Google"
        android:textSize="16dp"

        tools:ignore="MissingConstraints,VisualLintButtonSize"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="588dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/editTextusername"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:background="@drawable/line_txt"
        android:ems="10"
        android:hint="@string/app_name"
        android:inputType="text"
        android:minHeight="48dp"
        android:text=""
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="175dp" />

    <EditText
        android:id="@+id/editTextaddpass"
        android:layout_width="326dp"
        android:layout_height="48dp"
        android:background="@drawable/line_txt"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="Name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="277dp" />

    <TextView
        android:id="@+id/bottomtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Account? Login"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="670dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/usernametxt"
        android:layout_width="107dp"
        android:layout_height="21dp"
        android:text="User Name"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/passtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="241dp"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/confirmpasstxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="344dp"
        android:textColor="#FFFFFF"
        tools:ignore="MissingConstraints" />"

        />"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="519dp""
        />
</androidx.constraintlayout.widget.ConstraintLayout>